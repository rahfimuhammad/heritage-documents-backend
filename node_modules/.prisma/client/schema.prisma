generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Document {
  id         String       @id @default(uuid())
  title      String
  about      String
  type       String
  tag        String?
  year       String
  number     String?
  status     String
  attachment Attachment[] @relation("Attachment")
  linked     Attachment[] @relation("Linked")
  createdAt  DateTime
  uploadedAt DateTime     @default(now())
  file       String
  visibility String?
}

model Attachment {
  id           String   @id @default(uuid())
  documentId   String
  attachmentId String
  document     Document @relation("Linked", fields: [documentId], references: [id])
  attachment   Document @relation("Attachment", fields: [attachmentId], references: [id])
}
